void exercise1()
{
	string input;
    string word;
    int option=1;

    while(true)
    {
    	if(option==2){
    		break;
    	}
    cout<<"Enter a sentence to modify !! \n";

    getline(cin,input);
    stringstream ss(input);

    while (ss>>word)
    {
        if(word=="He" || word=="She")
        {
        	cout<<"She or he";
        }
        else if(word=="he" || word=="she")
        	{
        	cout<<"she or he";
        	}
        else if(word=="his" || word=="her")
            {
            	cout<<"her(s) or his";
            }
        else if(word=="His" || word=="Her")
            {
                cout<<"Her(s) or his";
            }
        else if(word=="him" || word=="her")
            {
                cout<<"her or him";
            }
        else if(word=="Him" || word=="Her")
            {
                cout<<"Her or him";
            }
        else
        {
        	cout<<word;
        }
        cout<<" ";
    }

    input.clear();
    cout<<"\nDo u want to enter one more sentence ? type \"1\" for yes and \"2\" for no \n";
    cin>>option;
    cin.ignore();
    }

}


