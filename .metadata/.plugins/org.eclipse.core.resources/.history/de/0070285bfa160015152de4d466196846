void exercise1()
{
	string input;
    string word;
    char next='y';

    while(next=='y' || next=='Y'))
    {
    cout<<"Enter a sentence to modify !! \n";
    getline(cin,input);
    stringstream ss(input);

    while (ss>>word)
    {
        if(word=="He" || word=="She")
        {
        	cout<<"She or he";
        }
        else if(word=="he" || word=="she")
        	{
        	cout<<"she or he";
        	}
        else if(word=="his" || word=="her")
            {
            	cout<<"her(s) or his";
            }
        else if(word=="His" || word=="Her")
            {
                cout<<"Her(s) or his";
            }
        else if(word=="him" || word=="her")
            {
                cout<<"her or him";
            }
        else if(word=="Him" || word=="Her")
            {
                cout<<"Her or him";
            }
        else
        {
        	cout<<word;
        }
        cout<<" ";
    }
    cout<<"Do u want to enter one more sentence ? type \"y\" for yes and \"N\" for no \n";
    cin>>next;
    }

}


