void example()
{
  string str ("There are two needles in this haystack with needles.");
  string str2 ("needle"), str2replace("iron");
  size_t found=0;

  cout << str << '\n';
  while((found = str.find(str2, found)) != string::npos)
  {
       str.replace(found, str2.length(), str2replace);
       found += str2replace.length();
  }
  cout << str << '\n';
}

void example2()
{
    string str("He is good person, he works are incredible. It was he honesty people appreciates.");
    string buf; // Have a buffer string
    stringstream ss(str); // Insert the string into a stream

    //vector<string> tokens; // Create vector to hold our words

    while (ss >> buf)
    {
        //tokens.push_back(buf);
        if(buf=="He" || "She")
        {
        	cout<<"She or he";
        	ss=ss>>buf;
        	ss=ss>>buf;

        }
        else if(buf=="he" || "she")
        	{
        		cout<<"she or he";
        		ss=ss>>buf;
        		ss=ss>>buf;
        	}
        else if(buf=="his" || "her")
            {
            	cout<<"her(s) or his";
            }
        else if(buf=="His" || "Her")
            {
                cout<<"Her(s) or his";
            }
        else if(buf=="him" || "her")
            {
                cout<<"her or him";
            }
        else if(buf=="Him" || "Her")
            {
                cout<<"Her or him";
            }
        else
        {
        	cout<<buf;
        }
        cout<<" ";

    }


}

